{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "lib": ["es2022"],
    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noImplicitOverride": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./src/**/*.js", "./src/**/*.json"]
}
